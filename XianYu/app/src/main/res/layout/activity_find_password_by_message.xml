<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.FindPasswordActivity1">

    <ImageView
        android:id="@+id/back"
        android:layout_width="15dp"
        android:layout_height="14dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/icon_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/find_password_phone"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:hint="手机账号"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <EditText
        android:id="@+id/find_password_message"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:hint="验证码"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/find_password_phone"
        app:layout_constraintLeft_toLeftOf="@id/find_password_phone"/>

    <Button
        android:id="@+id/login_by_message_get_message"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="获取验证码"
        android:background="@drawable/register_btn"
        app:layout_constraintLeft_toRightOf="@id/find_password_message"
        app:layout_constraintTop_toTopOf="@id/find_password_message"
        app:layout_constraintBottom_toBottomOf="@id/find_password_message"/>


    <Button
        android:id="@+id/find_password_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认"
        android:layout_marginTop="30dp"
        android:background="@drawable/login_btn"
        app:layout_constraintLeft_toLeftOf="@id/find_password_message"
        app:layout_constraintTop_toBottomOf="@+id/find_password_message"/>

    <Button
        android:id="@+id/Login_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="清空"
        android:layout_marginTop="30dp"
        android:background="@drawable/login_btn"
        app:layout_constraintRight_toRightOf="@id/login_by_message_get_message"
        app:layout_constraintTop_toBottomOf="@+id/find_password_message"/>


</android.support.constraint.ConstraintLayout>