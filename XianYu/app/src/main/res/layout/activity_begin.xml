<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".Activities.BeginActivity">


    <ImageView
        android:id="@+id/begin_logo"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@mipmap/ic_launcher"
        android:layout_marginTop="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/begin_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="闲余"
        android:textSize="40sp"
        android:fontFamily="@font/huamao"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/begin_logo" />

    <TextView
        android:id="@+id/begin_app_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="一句话介绍"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/begin_app_name"/>

    <Button
        android:id="@+id/begin_register_btn"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:textSize="30sp"
        android:text="注册"
        android:layout_marginTop="20dp"
        android:background="@drawable/register_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/begin_app_description"/>

    <Button
        android:id="@+id/begin_login_btn"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:textSize="30sp"
        android:text="登陆"
        android:background="@drawable/login_btn"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/begin_register_btn"/>

</android.support.constraint.ConstraintLayout>