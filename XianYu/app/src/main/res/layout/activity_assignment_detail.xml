<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/assignment_detail_title_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#4c88a3"
        >

        <ImageView
            android:id="@+id/assignment_detail_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/icon_back"/>

        <Button
            android:id="@+id/assignment_detail_button"
            android:layout_width="64dp"
            android:layout_height="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="20dp"
            android:textColor="#b2dfdb"
            android:background="@drawable/follow_btn"
            android:text="删除"
            />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/assignment_detail_picker_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#4c88a3"
        >

        <TextView
            android:id="@+id/assignment_detail_picker"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="领取人:"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            android:textColor="#b2dfdb"
            android:textSize="24sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            />

        <TextView
            android:id="@+id/assignment_detail_picker_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#b2dfdb"
            android:textSize="24sp"
            android:text="姓名"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/assignment_detail_picker"
            android:layout_marginLeft="20dp"
            />

        <ImageView
            android:id="@+id/assignment_detail_picker_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="20dp"
            android:src="@drawable/icon_right"
            />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>