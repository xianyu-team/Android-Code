<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/task_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="递送任务"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/task_punish_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2010-10-10 10:10:10"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/task_sketch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:text="hhhhhhhhhhhhhhhhhh"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/task_value"
        app:layout_constraintTop_toBottomOf="@+id/task_type" />

    <TextView
        android:id="@+id/task_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xx 闲余币"
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="@+id/task_sketch"
        app:layout_constraintBottom_toBottomOf="@+id/task_sketch"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="#4f4f4f"
        app:layout_constraintTop_toBottomOf="@+id/task_value"/>



</android.support.constraint.ConstraintLayout>