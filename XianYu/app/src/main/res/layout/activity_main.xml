<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- 内容（显示各种fragment页面） -->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/main_content"
        app:layout_constraintBottom_toTopOf="@+id/main_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.constraint.ConstraintLayout>

    <!-- 底部按钮 -->
    <LinearLayout
        android:id="@+id/main_button"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:id="@+id/main_assignment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/assignment_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/home" />

            <TextView
                android:textColor="#8a8a8a"
                android:id="@+id/assignment_text"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="任务大厅" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_balance"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/balance_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/user" />

            <TextView
                android:textColor="#8a8a8a"
                android:id="@+id/balance_text"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="钱包" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/main_account"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/account_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/user" />

            <TextView
                android:textColor="#8a8a8a"
                android:id="@+id/account_text"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="我" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>